<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#423D5C"
    tools:context=".MatMul">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:background="#423D5C"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Your Matrix"
            android:textColor="#F8F8F8"
            android:textSize="25sp" />

        <RadioGroup
            android:id="@+id/rdgrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp">

            <RadioButton
                android:id="@+id/bu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2X2 Matrix"
                android:textColor="#F4EBEB"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/bu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3X3 Matrix"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="#CFD6D6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Elements"
                android:textColor="#1E319C"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/valA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter one by one"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/data"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="mat"
                android:text="Enter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/Ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:onClick="ans"
                android:text="Answer"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F3EDC9"
                    android:text="Determinant"
                    android:textColor="#01035E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/detxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F3EDC9"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="#F3EDC9"
                    android:text="Adjoint"
                    android:textColor="#01035E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/adjoint"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_weight="1"
                    android:background="#F3EDC9"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F3EDC9"
                    android:text="Inverse"
                    android:textColor="#01035E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/invrs"
                    android:layout_width="wrap_content"
                    android:layout_height="120sp"
                    android:layout_weight="1"
                    android:background="#F3EDC9"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>