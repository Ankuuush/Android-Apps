<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#031627"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5pt">

        <TextView
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:layout_weight="1"
            android:background="#535050"
            android:gravity="bottom|end"
            android:text="0"
            android:textSize="30sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b18"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#A4A4AC"
                    android:onClick="buac"
                    android:text="AC"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/b17"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#A4A4AC"
                    android:onClick="buslct"
                    android:text="00"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/b16"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#A4A4AC"
                    android:onClick="buslct"
                    android:text="+/-"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/b15"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#F6630B"
                    android:onClick="op"
                    android:text="/"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b7"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#A4A4AC"
                    android:onClick="buslct"
                    android:text="7"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/b8"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#A4A4AC"
                    android:onClick="buslct"
                    android:text="8"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/b9"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#A4A4AC"
                    android:onClick="buslct"
                    android:text="9"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/b14"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#F6630B"
                    android:onClick="op"
                    android:text="x"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b4"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#A4A4AC"
                    android:onClick="buslct"
                    android:text="4"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/b5"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#A4A4AC"
                    android:onClick="buslct"
                    android:text="5"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/b6"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#A4A4AC"
                    android:onClick="buslct"
                    android:text="6"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/b13"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#F6630B"
                    android:onClick="op"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#A4A4AC"
                    android:onClick="buslct"
                    android:text="1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#A4A4AC"
                    android:onClick="buslct"
                    android:text="2"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#A4A4AC"
                    android:onClick="buslct"
                    android:text="3"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/b12"
                    android:layout_width="30pt"
                    android:layout_height="40pt"
                    android:layout_weight="1"
                    android:background="#F6630B"
                    android:onClick="op"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b0"
                android:layout_width="60pt"
                android:layout_height="40pt"
                android:layout_weight="2"
                android:background="#A4A4AC"
                android:onClick="buslct"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/b10"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="#A4A4AC"
                android:onClick="buslct"
                android:text="."
                android:textSize="20sp" />

            <Button
                android:id="@+id/b11"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="#F6630B"
                android:onClick="burslt"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="end"
            android:text="credit-Ankush"
            android:textColor="#DDD2D2"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>